# VaultHeir Backend - Railway Deployment
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Expose port (Railway uses PORT env variable)
EXPOSE 3001

# Start the server
CMD ["npm", "run", "start:prod"]
