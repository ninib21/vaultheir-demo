{
  "name": "vaultheir-desktop",
  "version": "1.0.0",
  "description": "VaultHeir - Digital Legacy & IP Asset Management Desktop Application",
  "main": "main.js",
  "author": "BidayaX LLC",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server\" \"wait-on http://localhost:3000 && electron .\"",
    "server": "cd ../.. && npm run dev",
    "build": "npm run build:next && electron-builder",
    "build:next": "cd ../.. && npm run build",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.vaultheir.desktop",
    "productName": "VaultHeir",
    "copyright": "Copyright Â© 2024 BidayaX LLC",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "offline.html"
    ],
    "extraResources": [
      {
        "from": "../.next/standalone",
        "to": "app",
        "filter": ["**/*"]
      },
      {
        "from": "../.next/static",
        "to": "app/.next/static",
        "filter": ["**/*"]
      },
      {
        "from": "../public",
        "to": "app/public",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-Windows.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.finance",
      "artifactName": "${productName}-${version}-Mac.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "artifactName": "${productName}-${version}-Linux.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VaultHeir"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}
